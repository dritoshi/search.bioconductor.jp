<%= form_for @code, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :package, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :package, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :version, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :version, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :file_path, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :file_path, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :file, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :file, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :language, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :language, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :code, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                codes_path, :class => 'btn' %>
  </div>
<% end %>
